{
  "name": "@mixxtor/adonisjs-shopify",
  "version": "1.0.4",
  "description": "AdonisJS provider for Shopify API integration",
  "engines": {
    "node": ">=20.6.0"
  },
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build",
    "!build/bin",
    "!build/tests"
  ],
  "imports": {
    "#models/*": "./models/*.js"
  },
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types/index.js",
    "./types/rest": "./build/src/types/rest.js",
    "./constants": "./build/src/constants/index.js",
    "./services/main": "./build/services/main.js",
    "./provider": "./build/providers/shopify_provider.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "pretest": "npm run lint",
    "test": "c8 npm run quick:test",
    "prebuild": "npm run lint && npm run clean",
    "build": "tsc",
    "postbuild": "npm run copy:templates",
    "release": "release-it",
    "release:patch": "release-it patch",
    "release:minor": "release-it minor",
    "release:major": "release-it major",
    "release:beta": "release-it --preRelease=beta",
    "release:alpha": "release-it --preRelease=alpha",
    "release:dry": "release-it --dry-run",
    "version": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "adonisjs",
    "shopify",
    "api",
    "provider",
    "ecommerce"
  ],
  "author": "Mixxtor",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/core": "^6.19.0",
    "@adonisjs/eslint-config": "^2.1.2",
    "@adonisjs/prettier-config": "^1.4.5",
    "@adonisjs/tsconfig": "^1.4.1",
    "@japa/assert": "^4.1.1",
    "@japa/runner": "^4.4.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@swc/core": "^1.13.3",
    "@types/node": "^24.3.0",
    "c8": "^10.1.3",
    "copyfiles": "^2.4.1",
    "del-cli": "^6.0.0",
    "eslint": "^9.33.0",
    "prettier": "^3.6.2",
    "release-it": "^19.0.4",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.19.0"
  },
  "dependencies": {
    "@shopify/shopify-api": "^11.14.1",
    "jsonwebtoken": "^9.0.2"
  },
  "homepage": "https://github.com/mixxtor/adonisjs-shopify#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mixxtor/adonisjs-shopify.git"
  },
  "bugs": {
    "url": "https://github.com/mixxtor/adonisjs-shopify/issues"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": true,
      "requireUpstream": true,
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "push": true,
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "Release v${version}",
      "releaseNotes": null,
      "autoGenerate": true,
      "draft": false,
      "preRelease": false
    },
    "npm": {
      "publish": true,
      "skipChecks": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "prettier": "@adonisjs/prettier-config",
  "adonisjs": {
    "types": "@adomin/adonisjs-shopify",
    "providers": [
      "@adomin/adonisjs-shopify/provider"
    ]
  }
}
